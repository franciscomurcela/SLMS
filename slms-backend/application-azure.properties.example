# ======================================
# Spring Boot Application Properties (Azure)
# ======================================
# Este ficheiro deve ser usado como base para configuração
# As variáveis ${} serão substituídas por valores de ambiente

# Database Configuration
spring.datasource.url=${DB_URL:jdbc:postgresql://localhost:5432/slms_database}
spring.datasource.username=${DB_USERNAME:slmsadmin}
spring.datasource.password=${DB_PASSWORD:password}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA/Hibernate
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Server Configuration
server.port=${SERVER_PORT:8080}

# Actuator (para health checks)
management.endpoints.web.exposure.include=health,info
management.endpoint.health.show-details=when-authorized

# Logging
logging.level.root=INFO
logging.level.com.slms=DEBUG

# Profile específico
spring.profiles.active=${SPRING_PROFILES_ACTIVE:dev}
