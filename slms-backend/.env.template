# Central .env.template for backend services
# Copy this file to `.env` and fill the real secrets locally (DO NOT COMMIT `.env`).

# === Database Configuration (Supabase) ===
# JDBC URL including Supabase pooler options (sslmode + prepared-statement mitigation)
SPRING_DATASOURCE_URL=jdbc:postgresql://<SUPABASE_POOLER_HOST>:<PORT>/<DB_NAME>?sslmode=require&preferQueryMode=simple&prepareThreshold=0

# Credentials
SPRING_DATASOURCE_USERNAME=<DB_USER>
SPRING_DATASOURCE_PASSWORD=<DB_PASSWORD>

# Optional compatibility variables
DB_HOST=<SUPABASE_POOLER_HOST>
DB_PORT=<PORT>
DB_NAME=<DB_NAME>
DB_USER=<DB_USER>
DB_PASS=<DB_PASSWORD>

# === Authentication Configuration (Keycloak) ===
# Keycloak issuer URI for JWT validation (local Keycloak)
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://localhost:8081/realms/ESg204

# Optional: Supabase REST API (for backend-to-supabase calls with service-role key)
SUPABASE_URL=https://<YOUR_PROJECT>.supabase.co
SUPABASE_SERVICE_ROLE_KEY=<YOUR_SERVICE_ROLE_KEY>
